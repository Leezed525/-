.base {
  padding: 10rpx;
}
.user {
  position: relative;
  width: 100%;
  height: 250rpx;
  background-color: #fff;
}

.user .face {
  margin-top: 20rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%);
}
.user .face image {
  width: 150rpx;
  border-radius: 50%;
  border: 3px solid #fff;
}
.user .username {
  position: absolute;
  left: 50%;
  bottom: 0%;
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  transform: translateX(-50%);
}

.info {
  display: flex;
  margin-top: 10rpx;
  height: 150rpx;
  background-color: #fff;
}

.info .info-child {
  text-align: center;
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.info .info-child + .info-child {
  border-left: 1px solid #000;
}

.info-child view {
  line-height: 20rpx;
}

.info-num {
  font-size: 25px;
  line-height: 100rpx;
}

.container {
  width: 100%;
}

.opt-child {
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 20px;
  background-color: #fff;
}
.opt-child span {
  font-size: 20px;
}
