.bodystyle {
  width: 100%;
  height: 100%;
  position: absolute;
  background: url("https://z3.ax1x.com/2021/06/27/RJbBee.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-attachment: fixed;
}

.content {
  opacity: unset;
  text-align: center;
  width: 100%;
  height: 75%;
  background: transparent;
}

.sentence {
  width: 100%;
  /* background: #000; */
  color: #000;
}

.sentence_content {
  font-size: 50rpx;
}
.btn {
  background-color: rgba(255, 255, 255, 0.5);
}

.btn_qiandao {
  width: 28%;
  height: 20%;
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
}

.btn view span {
  font-size: 50rpx;
  line-height: 70rpx;
}
.operations {
  height: 25%;
  width: 100%;
  padding: 20rpx;
}
.operation_item {
  padding: 10rpx;
  display: inline-block;
  height: 100%;
  width: 50%;
}

.operation_item_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.operation_item_btn text {
  font-size: 60rpx;
}
