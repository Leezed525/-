.search_word {
  height: 70rpx;
  background-color: #fff;
}
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #f1f1f1;
  border: 1rpx solid #e6e6ea;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09bb07;
  white-space: nowrap;
}

.navigators {
  display: flex;
  margin-top: 15px;
  height: 100px;
  background-color: #fff;
  border: 5px solid #f1f1f1;
}

.navigators .navigators_item + .navigators_item {
  border-left: #000 solid 1px;
}

.navigators_item {
  text-align: center;
  margin-top: 20px;
  width: 33%;
  height: 60px;
  text-align: center;
  font-size: 30rpx;
}
.navigators_item navigator {
  text-align: center;
  width: 100%;
}

.navigators_item navigator span {
  width: 40%;
  font-size: 35px;
  display: block;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%);
}

.scroll_line {
  margin-top: 10px;
  width: 100%;
  background-color: #fff;
}

.banner {
  position: sticky;
  top: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  white-space: nowrap;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  z-index: 10;
}

.banner scroll-view {
  height: 100%;
}

.sort {
  width: 20%;
  text-align: center;
  position: relative;
  display: inline-block;
  font-size: 32rpx;
  margin-right: 70rpx;
  line-height: 80rpx;
  height: 100%;
}

scroll-view .sort:last-child {
  margin-right: 0rpx;
}

.choose {
  color: #16ba98;
}

.line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 5rpx;
  border-radius: 10rpx;
  background: #16ba98;
  animation: spread 0.3s;
}

@keyframes spread {
  0% {
    width: 0;
    left: 50%;
  }

  100% {
    width: 100%;
    left: 0;
  }
}

.place {
  height: 800rpx;
}

.calendar {
  margin: 10px;
  background-color: #fff;
}

.datetimeTo {
  font-size: 40rpx;
}

.timeLeft {
  font-size: 40rpx;
}
